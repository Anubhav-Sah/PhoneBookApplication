<?xml version="1.0" encoding="utf-8"?>
<!-- curve_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the background color for your curved shape -->
    <solid android:color="#FFFFFF" />


    <corners android:radius="18dp" />

    <!-- Optional: Set padding inside the shape -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />

    <!-- Optional: Add a shadow or border -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />
</shape>
